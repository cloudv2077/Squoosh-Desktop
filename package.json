{
  "name": "squoosh-desktop",
  "version": "1.0.0",
  "description": "Desktop image compression tool",
  "main": "main.js",
  "scripts": {
    "prebuild": "node scripts/fetch-squoosh.js",
    "start": "electron .",
    "test-build": "echo 'Testing build setup' && npm run prebuild"
  },
  "devDependencies": {
    "electron": "25.9.0",
    "electron-builder": "24.6.4"
  },
  "build": {
    "appId": "com.squoosh.desktop",
    "productName": "Squoosh Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "squoosh-static/**/*"
    ]
  }
}
