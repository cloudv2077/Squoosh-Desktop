{
  "name": "squoosh-desktop",
  "version": "1.0.0",
  "description": "本地化图片压缩工具 - 基于Google Squoosh技术",
  "main": "main.js",
  "scripts": {
    "prebuild": "node scripts/fetch-squoosh.js",
    "start": "npm run prebuild && electron .",
    "build": "npm run prebuild && electron-builder",
    "build:win": "npm run prebuild && electron-builder --win --x64",
    "build:mac": "npm run prebuild && electron-builder --mac --x64 --arm64",
    "build:linux": "npm run prebuild && electron-builder --linux --x64",
    "build:all": "npm run prebuild && electron-builder --mac --windows --linux",
    "clean": "rm -rf squoosh-static .tmp dist",
    "dev": "npm run prebuild && npm start"
  },
  "keywords": ["electron", "squoosh", "image", "compression"],
  "author": "Squoosh Desktop Team",
  "license": "Apache-2.0",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.squoosh.desktop",
    "productName": "Squoosh Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "squoosh-static/**/*",
      "package.json",
      "!node_modules/**/*",
      "node_modules/electron/**/*"
    ],
    "extraResources": [
      {
        "from": "squoosh-static",
        "to": "squoosh-static"
      }
    ],
    "mac": {
      "category": "public.app-category.graphics-design",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "category": "Graphics",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
