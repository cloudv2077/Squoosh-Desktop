{
  "name": "tu-xiaoxiao",
  "version": "1.1.0",
  "description": "图小小 - 强大的跨平台图片压缩优化工具",
  "main": "main.js",
  "scripts": {
    "start": "./start.sh",
    "prebuild": "node scripts/fetch-squoosh.js",
    "build": "npm run prebuild && electron-builder",
    "build:win": "npm run prebuild && electron-builder --win",
    "build:mac": "npm run prebuild && electron-builder --mac",
    "build:linux": "npm run prebuild && electron-builder --linux"
  },
  "keywords": [
    "electron",
    "squoosh",
    "image",
    "compression"
  ],
  "author": "图小小开发团队",
  "license": "Apache-2.0",
  "devDependencies": {
    "electron": "^25.9.0",
    "electron-builder": "24.6.4"
  },
  "build": {
    "appId": "com.tuxiaoxiao.desktop",
    "productName": "图小小",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "start.sh",
      "start.bat",
      "squoosh-static/**/*",
      "package.json",
      "README.md"
    ],
    "extraResources": [
      "start.sh",
      "start.bat"
    ],
    "mac": {
      "category": "public.app-category.graphics-design",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "nsis", 
          "arch": ["ia32"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "Graphics"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "${productName}-Setup-${version}-${arch}.${ext}"
    }
  }
}
